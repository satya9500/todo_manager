<section class="TodoPage-section">

  <article class="TodoPage-article">
    <h2 class="TodoArticle-title"><%= section_title %></h2>
    <p class="remainingTodoCount"><%= todos.completed.count %> / <%= todos.count %> </p>
  </article>

  <ul class="TodoList">
    <% todos.each do |todo| %>
      <%if show_completed_todos or !todo.completed%>
          <li class="TodoItem">
            <label class="TodoListLabel">
              <%if todo.completed %>
                <input type="checkbox" checked="checked" class="TodoCheckbox" />
                <p class="TodoItem-text Cross-todo"> <%= todo.todo_text %> </p>
              <% else%>
                <input type="checkbox" class="TodoCheckbox" />
                <p class="TodoItem-text"> <%= todo.todo_text %> </p>
              <%end%>
              <% if show_due_date %>
                <p class="remainingTodoDate"> <%= todo.due_date.to_s(:short) %> </p>
              <%end%>
              <a href="javascript:void(0)">
                <%= image_tag(asset_path("delete.png"), :class=>"delete-icon") %>
              </a>
            </label>
          </li>
      <%end%>
    <% end %>
  </ul>

</section>
